# =============================================================================
# LangGraph Salesforce SAP Demo - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -----------------------------------------------------------------------------
# Salesforce Configuration (Developer Edition)
# -----------------------------------------------------------------------------
# Set to "mock" to use mock data, or "real" for actual Salesforce connection
SALESFORCE_MODE=mock

# Only needed if SALESFORCE_MODE=real
# Get these from: Setup > Apps > App Manager > Create Connected App
SALESFORCE_CLIENT_ID=your_connected_app_client_id
SALESFORCE_CLIENT_SECRET=your_connected_app_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_security_token
# Instance URL (e.g., https://your-domain.my.salesforce.com)
SALESFORCE_INSTANCE_URL=https://login.salesforce.com
# API Version
SALESFORCE_API_VERSION=v59.0

# -----------------------------------------------------------------------------
# SAP Configuration (OData)
# -----------------------------------------------------------------------------
# Set to "mock" to use mock SAP data, or "real" for actual SAP connection
SAP_MODE=mock
# SAP OData Base URL (only needed if SAP_MODE=real)
SAP_BASE_URL=https://your-sap-instance.com/sap/opu/odata/sap
SAP_USERNAME=sap_user
SAP_PASSWORD=sap_password
# SAP Client (Mandant)
SAP_CLIENT=100

# -----------------------------------------------------------------------------
# LangSmith Tracing Configuration
# -----------------------------------------------------------------------------
# Get your API key from: https://smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_api_key
# Enable LangChain tracing
LANGCHAIN_TRACING_V2=true
# Project name in LangSmith
LANGCHAIN_PROJECT=langgraph-salesforce-sap-demo
# LangSmith endpoint (usually don't need to change)
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# -----------------------------------------------------------------------------
# OpenAI Configuration (for any LLM-based decisions)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Server settings
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Demo Configuration
# -----------------------------------------------------------------------------
# Default owner IDs for routing (Salesforce User IDs)
DEFAULT_AE_OWNER_ID=005XXXXXXXXXXXXXXX
DEFAULT_SDR_OWNER_ID=005XXXXXXXXXXXXXXX
DEFAULT_NURTURE_OWNER_ID=005XXXXXXXXXXXXXXX
DEFAULT_ESCALATION_OWNER_ID=005XXXXXXXXXXXXXXX
