# ============================================================================
# Google Cloud Platform Configuration for Vertex AI Agent Engine
# ============================================================================
# Copy this file to your .env and fill in the values

# GCP Project Settings (REQUIRED for deployment)
PROJECT_ID=your-gcp-project-id
LOCATION=us-central1
STAGING_BUCKET=gs://your-staging-bucket

# ============================================================================
# OpenAI Configuration (REQUIRED)
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================================================
# LangSmith Tracing (RECOMMENDED)
# ============================================================================
LANGSMITH_API_KEY=lsv2_your_langsmith_api_key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=belden-sales-agent
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ============================================================================
# Salesforce Configuration
# ============================================================================
# Mode: "mock" for demo, "real" for production
SALESFORCE_MODE=mock

# Real Salesforce credentials (required if SALESFORCE_MODE=real)
SALESFORCE_CLIENT_ID=your_connected_app_client_id
SALESFORCE_CLIENT_SECRET=your_connected_app_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_security_token
SALESFORCE_LOGIN_URL=https://login.salesforce.com
SALESFORCE_API_VERSION=v59.0

# ============================================================================
# SAP Configuration
# ============================================================================
# Mode: "mock" for demo, "real" for production
SAP_MODE=mock

# Real SAP credentials (required if SAP_MODE=real)
SAP_BASE_URL=https://your-sap-instance.com/sap/opu/odata/sap
SAP_API_KEY=your_sap_api_key
SAP_USERNAME=your_sap_username
SAP_PASSWORD=your_sap_password
SAP_CLIENT=100

# ============================================================================
# Routing Configuration (Salesforce Owner IDs)
# ============================================================================
# Owner IDs for lead routing (replace with real Salesforce User IDs)
ROUTING_AE_OWNER_ID=005000000000001AAA
ROUTING_SDR_OWNER_ID=005000000000002AAA
ROUTING_NURTURE_OWNER_ID=005000000000003AAA
ROUTING_ESCALATION_OWNER_ID=005000000000004AAA

# ============================================================================
# Resend Email Configuration (for Lead Alerts & Product Complaints)
# ============================================================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key

# From email (must be verified domain or use onboarding@resend.dev for testing)
RESEND_FROM_EMAIL=onboarding@resend.dev

# Email to receive notifications (Lead alerts & Product complaints)
NOTIFICATION_EMAIL=your_email@company.com

# ============================================================================
# Product Owner Emails (for Product Complaint notifications)
# ============================================================================
# Each product category can have a different owner email
PRODUCT_OWNER_SWITCHES=product_owner@company.com
PRODUCT_OWNER_CABLES=product_owner@company.com
PRODUCT_OWNER_CONNECTORS=product_owner@company.com
PRODUCT_OWNER_SOFTWARE=product_owner@company.com
PRODUCT_OWNER_INFRASTRUCTURE=product_owner@company.com
PRODUCT_OWNER_GENERAL=product_owner@company.com

# ============================================================================
# IT Support Configuration
# ============================================================================
IT_SUPPORT_URL=https://support.belden.com/it
